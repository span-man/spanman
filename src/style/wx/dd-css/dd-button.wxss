/* dd-btn 按钮样式 注意：root 在小程序里还用不了 */

:root {
    --btn-padding: 3pt 13pt;
}

.dd-btn-red {
    outline: none;
    border: 1px solid transparent;
    cursor: pointer;
    background-color: #c82333;
    color: white;
    font-size: 12pt;
    font-weight: 400;
    text-align: center;
    padding: 3pt 13pt;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.dd-btn-red:hover {
    background-color: #b11f2d;
}

/* 圆角red btn */

.dd-btn-red-c {
    border: 1pt solid transparent;
    width: 200pt;
    height: 26pt;
    background: #c82333;
    color: white;
    border-radius: 20pt;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-self: center;
    font-size: 12pt;
    box-shadow: 0 0 5pt #ccc;
}

.dd-btn-ccc {
    outline: none;
