/* 默认圆形的按钮 尺寸可以更改  */

.dd-btn-circle {
    width: 20pt;
    height: 20pt;
    background: #f1f1f1;
    border: 2pt solid #ccc;
    border-radius: 50%;
    display: block;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

/* 美团 黄色主色调 */

.mt-btn {
    /* 固定内部元素居中 */
    outline: none;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    /* 固定内部元素居中等 一般上面这部分不变 */
    /* 下面为可变的 */
    width: 150px;
    height: 66px;
    font-size: 24px;
    border-radius: 5px;
    border: 1px solid #666;
}

.mt-btn-yellow {
